@model Boutique.Models.ViewModels.ProdusUtilizatorViewModel
<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Sumar Comandă
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm">Înapoi la Coș</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Detalii Utilizator:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Nume</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="Utilizator.FullName" type="text" class="form-control" />
                                        <span asp-validation-for="Utilizator.FullName" class="text-capitalize"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Telefon</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="Utilizator.PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="Utilizator.PhoneNumber" class="text-capitalize"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="Utilizator.Email" type="text" class="form-control" />
                                        <span asp-validation-for="Utilizator.Email" class="text-capitalize"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Sumar:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @for (int i = 0; i < Model.ListaProduse.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ListaProduse[i].Id" />
                                            <input type="hidden" asp-for="@Model.ListaProduse[i].Name" />
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ListaProduse[i].Name</h6>
                                                    <small class="text-muted">Preț @Model.ListaProduse[i].Price Lei</small>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" class="btn btn-primary form-control">Trimite</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
