@model IEnumerable<Produs>
@{
    ViewData["Title"] = "Coș";
}
@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col-8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Coș de Cumpărături
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Home" class="btn-outline-info btn-sm">Continuă Cumpărăturile</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2"></div>
                                    <div class="col-12 col-lg-7">Detalii Produs</div>
                                    <div class="col-12 col-lg-2">Preț pe buc.</div>
                                    <div class="col-6 col-sm-4 col-lg-1"></div>
                                </div>
                            </div>

                            <hr />
                            @foreach (var obj in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@ShopConstants.ImagePath@obj.Image" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@obj.Name</h5>
                                        <div style="font-size:11px;">@obj.Description</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> $@obj.Price</span>
                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Sterge" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col offset-md-9 pl-1">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Continuă</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <p> Coșul este gol</p>
}
