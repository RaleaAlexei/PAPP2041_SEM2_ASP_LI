@model Boutique.Models.Produs
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Categorie.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm " style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0}", Model.Price) Lei</span>  </label> </div>
        </div>

        <div class="card-body p-1 px-3 row">
            <img class="card-img-top img-fluid d-block  mb-3" src="@ShopConstants.ImagePath@Model.Image" alt="Imagine card">
            @*<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
            <p> @Model.ShortDesc</p>
            </div>*@
            <div class="col-12 p-1">
                <a asp-action="Detalii" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Vezi detalii</a>
            </div>
        </div>
    </div>
</div>