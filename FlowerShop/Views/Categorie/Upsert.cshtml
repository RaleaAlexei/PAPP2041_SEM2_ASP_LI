@model Boutique.Models.Categorie
@{
    ViewData["Title"] = ((Model.Id != 0) ? "Editeaza" : "Adaugă") + " Categorie";
}
<form method="post" asp-action="@((Model.Id != 0) ? "Editeaza" : "Creeaza")">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@((Model.Id != 0) ? "Editează Categorie" : "Adaugă Categorie")</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Order"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-100" value="@((Model.Id != 0) ? "Actualizează" : "Creează")" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-info w-100"><i class="fa-solid fa-right-from-bracket"></i> Înapoi</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Păstrează acest spațiu gol *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
